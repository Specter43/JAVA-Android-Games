<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <fall2018.csc2017.GameCenter.SlidingTileGestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:cacheColorHint="@color/colorPrimaryDark"
            android:requiresFadingEdge="none"
            tools:context="fall2018.csc2017.GameCenter.GameActivity" />

    </LinearLayout>

    <TextView
        android:id="@+id/step"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="27dp"
        android:layout_toStartOf="@+id/eight"
        android:text="Step"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="27dp"
        android:text="Quit" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="26dp"
        android:layout_toStartOf="@+id/nine"
        android:text="Undo" />

</RelativeLayout>